@page
@model EventPlanner.Pages.Events.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Events</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Event[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Event[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Event[0].Date)
            </th>
            <th>
                @Html.DisplayNameFor(model=>model.Event[0].SpotsAvailable)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Event) {
        <tr>
            <td>
                @item.Title
            </td>
            <td>
                @item.Description
            </td>
            <td>
                @item.Date.ToShortDateString()
            </td>
            @if (item.SpotsAvailable == true)
            {
                <td>Yup</td>
            }
            else
            {
                <td>Nop</td>
            }
            <td>
                <a asp-page="./Details" asp-route-id="@item.ID">More Info</a>
            </td>
        </tr>
}
    </tbody>
</table>
