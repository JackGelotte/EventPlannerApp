@page
@model EventPlanner.Pages.MyEvents.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>My Events</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Event[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Event[0].Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Event[0].Date)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Event) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @item.Date.ToShortDateString()
            </td>
            <td>
                <a asp-page="./Delete" asp-route-id="@item.ID">Withdraw</a>
            </td>
        </tr>
}
    </tbody>
</table>
